{
    "root": true,
    "extends": [
        "eslint:recommended",
        "plugin:import/errors",
        "plugin:react/recommended",
        "plugin:jsx-a11y/recommended",
        "airbnb",
        "prettier",
        "plugin:testing-library/react",
        "plugin:jest/all"
    ],
    "plugins": [
        "prettier",
        "react",
        "react-hooks",
        "testing-library",
        "jest",
        "import",
        "jsx-a11y"
    ],
    "rules": {
        "react/no-unescaped-entities": 0,
        "react/jsx-props-no-spreading": 0,
        "prettier/prettier": ["warn", {}, { "usePrettierrc": true }],
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "no-console": 1,
        "no-unused-vars": 1,
        "import/no-unresolved": 2,
        "no-undefined": 2,
        "react/jsx-uses-vars": 2,
        "jsx-a11y/label-has-associated-control": [
            "error",
            {
                "required": {
                    "some": ["nesting", "id"]
                }
            }
        ],
        "jsx-a11y/label-has-for": [
            "error",
            {
                "required": {
                    "some": ["nesting", "id"]
                }
            }
        ]
    },
    "parserOptions": {
        "ecmaVersion": 2022,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "es6": true,
        "browser": true,
        "amd": true,
        "node": true,
        "jest/globals": true
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
